
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}



<div class="box box-primary">
    <div class="form-group" style="text-align:center;padding:20px">
        <label for="exampleInputEmail1" style="margin-bottom:10px">نوتیفیکیشن جاری</label>
        <div style="clear:both"></div>
        <img src="@ViewBag.Notificaion" style="display:inline-block;max-width:80%;max-height:80vh;margin:auto;" />
    </div>

    <div class="form-group" style="text-align:center">
        <a href="/Admin/Notification/DeleteNotification" class="btn btn-danger" style="margin:20px auto">حذف</a>
    </div>
</div>

<div class="box box-primary">

    <form enctype="multipart/form-data" method="post" action="/Admin/Notification/Store" role="form">
        @Html.AntiForgeryToken()
        <!-- /.box-header -->

        <div class="box-body">

            <div class="form-group">
                <label for="exampleInputEmail1">انتخاب عکس</label>
                <input value="" name="Title" type="file" class="form-control" id="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">لینک</label>
                <input value="" name="Link" type="text" class="form-control" id="">
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">
                ارسال
                <i class="fa fa-paper-plane"></i>
            </button>

        </div>
    </form>
</div>