
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">


            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive">
                <br>
                <a href="/Admin/Update/Create" class="btn btn-success">
                    ایجاد آپدیت
                </a>
                <br>
                @*@include('errors')*@
                <table class="table table-hover">
                    <tr class="">
                        <th>کد آپدیت</th>
                        <th>نام ورژن</th>
                        <th>تغییرات</th>
                        <th>لینک</th>
                        <th>عملیات</th>
                    </tr>
                    @foreach (var data in ViewBag.Data)
                    {
                        <tr>
                            <td>@data.VersionCode</td>
                            <td>@data.VersionName</td>
                            <td>@data.Desc</td>
                            <td>@data.Link</td>
                            <td><a class="btn btn-danger" href="/Admin/Update/Delete?Id=@data.Id">حذف</a></td>
                        </tr>
                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>


    </div>
</div>

