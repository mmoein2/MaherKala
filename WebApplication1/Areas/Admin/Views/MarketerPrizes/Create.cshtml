
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}




<div style="color:red;font-weight:bold">
    @TempData["Error"]
</div>
<div class="box box-primary">

    <form enctype="multipart/form-data" method="post" action="/MarketerPrizes/Store" role="form">
        @Html.AntiForgeryToken()
        <!-- /.box-header -->

        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">عنوان</label>
                <input value="" name="Title" type="text" class="form-control" id="">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">متن</label>
                @Html.Ckeditor("Text")
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">انتخاب تصویر اصلی</label>
                <input name="Main_Image" type="file" class="form-control" id="Main_Image_Upload" onchange="setImage()">
                <img alt="بدون تصویر" id="Main_Image_Show" style="width:150px;height:150px" src="" />

            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">ذخیره</button>
            <a class="btn btn-primary" href="/Admin/MarketerPrizes/Index">بازگشت </a>
        </div>
    </form>
</div>

@section footer
{


    <script>

        tinymce.init({
            selector: 'textarea#mytextarea',
            plugins : 'advlist autolink link lists preview table code pagebreak',
            menubar: false,
            language: 'fa',
            height: 300,
            relative_urls: false,
            toolbar: 'undo redo | removeformat preview code | fontsizeselect bullist numlist | alignleft aligncenter alignright alignjustify | bold italic | pagebreak table link',
        });
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2();
        });

        function setImage() {

            var myURL = window.URL || window.webkitURL;
            var fileURL = myURL.createObjectURL(Main_Image_Upload.files[0]);
            Main_Image_Show.src = fileURL;
        }
    </script>
}



