
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}


<div class="box box-primary">
    <div class="box-body">
        <table class="table table-hover">
            <tr class="">
                <th>نام نام خانوادگی</th>
                <th>عملیات</th>
            </tr>
            @foreach (var whole in ViewBag.Data.Data)
            {
                <tr>
                    <td>@whole.Fullname</td>
                    <td style="background-color:@if (whole.IsShow == false) {@String.Format("orange") } else {@String.Format("lightgreen") } ">@if (whole.IsShow == false) { @String.Format("مشاهده نشده"); } else { @String.Format("مشاهده شده"); }</td>
                    <td>
                        <form action="/Admin/WholeSalers/Delete/@whole.Id" method="post">




                            <div class="btn-group">
                                <a class="btn btn-sm btn-success" href="/Admin/WholeSalers/Detail/@whole.Id">جزئیات</a>
                                <button class="btn btn-sm btn-danger" type="submit">حذف</button>

                            </div>

                        </form>
                    </td>
                </tr>
            }
        </table>

        @Html.Raw(@ViewBag.Data.GetLinks())
    </div>
</div>