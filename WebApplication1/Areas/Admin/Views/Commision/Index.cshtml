
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}
<style>
    td,th{
        text-align:center;
    }
</style>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">کمیسیون بازاریاب</h3>

            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <br>
                <div style="color:red;padding:10px;font-weight:bold">
                    @TempData["Message"]
                </div>
                @Html.ValidationSummary()
                <form action="/Admin/Commision/Index" method="get">
                    <h4>جستجو</h4>
                    <div style="margin: 15px" class="row">
                        <div class="col-md-3">
                            <label>
                                نام خریدار
                            </label>
                            <input class="form-control" type="text" value="@Request["Buyer"]" name="Buyer">
                        </div>
                        <div class="col-md-3">
                            <label>
                                بازاریاب
                            </label>
                            <input class="form-control" type="text" value="@Request["Marketer"]" name="Marketer">
                        </div>
                        
                        <div class="col-md-3">
                            <button style="margin-top: 25px" class="btn btn-primary" type="submit">جستجو</button>
                            <a style="margin-top: 25px" class="btn btn-danger" href="/Admin/Commision/Index">حذف فیلتر</a>
                        </div>
                </form>
            </div>
            <hr>
            <table class="table table-hover">
                <tr>
                    <th>بازاریاب</th>
                    <th>خریدار</th>
                    <th>تاریخ</th>
                    <th>مبلغ</th>
                    <th>جزئیات</th>
                </tr>
                @foreach (var c in ViewBag.Data.Data)
                {
                    <tr>
                        <td>@c.MarketerUser.Name&nbsp;@c.MarketerUser.LastName</td>
                        <td>@c.MarketerFactor.Buyer</td>
                        <td>@ShamsiDate.ToShamsi(c.Date)</td>
                        <td>@c.Money</td>
                        <td>@c.Detail</td>
                       
                   
                </tr>
                }
            </table>
            @Html.Raw(ViewBag.Data.GetLinks())

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>
