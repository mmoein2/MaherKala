@model WebApplication1.Models.News
@{
    ViewBag.Title = "ویرایش";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}




@*@include('errors')*@
<div class="box box-primary">

    <form enctype="multipart/form-data" method="post" action="/News/Update" role="form">
        @Html.AntiForgeryToken()
        <!-- /.box-header -->
        <input  value="@Model.Id" name="Id" type="hidden" class="form-control" id="">
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">عنوان</label>
                <input value="@Model.Title" name="Title" type="text"  class="form-control" id="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">خلاصه</label>
                <input value="@Model.Desc" name="Desc" type="text" class="form-control" id="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">متن</label>
                
                @Html.CkeditorFor(p=>p.Text)
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">ذخیره</button>
            <a class="btn btn-primary" href="/Admin/News/Index">بازگشت </a>
        </div>
    </form>
</div>

