
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}




<div style="color:red;font-weight:bold">
    @TempData["Error"]
</div>
<div class="box box-primary">
    
    <form enctype="multipart/form-data" method="post" action="/News/Store" role="form">
        @Html.AntiForgeryToken()
        <!-- /.box-header -->
       
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">عنوان</label>
                <input value="" name="Title" type="text" class="form-control" id="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">خلاصه</label>
                <input value="" name="Desc" type="text" class="form-control" id="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">متن</label>
                @Html.Ckeditor("Text")
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">ذخیره</button>
            <a class="btn btn-primary" href="/Admin/News/Index">بازگشت </a>
        </div>
    </form>
</div>

