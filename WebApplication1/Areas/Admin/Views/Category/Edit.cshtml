
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}

<div class="box box-primary">
    <form enctype="multipart/form-data" method="post" action="/Admin/Category/Update" role="form">
        @Html.AntiForgeryToken()
        <input type="hidden" value="@ViewBag.Data.Id" name="Id" />
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">نام دسته بندی</label>
                <input value="@ViewBag.Data.Name" name="name" type="text" class="form-control" id="exampleInputEmail1" placeholder="نام دسته بندی">
            </div>
            <div class="form-group">
                <label for="">انتخاب تصویر</label>
                <input id="image" type="file" onchange="setImage()" class="form-control" name="image">
                <img id="imgUpload" width="100" src="@ViewBag.Data.Image" height="100" />
            </div>
        </div>
        <div style="color:red;font-weight:bold">
            @TempData["Error"]
        </div>


        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">اعمال تغییرات</button>
            <a class="btn btn-primary" href="/Category/back/@ViewBag.Data.Id">بازگشت </a>
        </div>
    </form>
</div>


<script>
    function setImage() {
                        var myURL = window.URL || window.webkitURL;
                        var fileURL = myURL.createObjectURL(image.files[0]);
                        imgUpload.src=fileURL;
                    }
</script>