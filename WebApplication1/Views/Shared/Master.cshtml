    <div class="mynavbar" style="direction:rtl">
        @{
            const int COUNT = 10;
            var ct = db.Categories.Where(p => p.Parent == null).ToList();

            for (int i = 0, counter = 0; i < ct.Count; i++)
            {
                bool open = false;

                <div class="mydropdown">
                    <button class="mydropbtn">
                        @ct[i].Name
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="mydropdown-content">
                        <div class="row">
                            @{
