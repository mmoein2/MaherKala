                                    if ((counter == 0) && open == false)
                                    {
                                        @Html.Raw("<div class='mycolumn' style='width:25%'>");
                                        open = true;
                                    }

                                    <a href="/Categories/Index?Category_Id=@children[j].Id" style="color:#049caf;font-size:16px">@children[j].Name</a>
                                    counter++;
                                    if (counter % COUNT == 0 && open)
                                    {
                                        @Html.Raw("</div>");
                                        open = false;

                                    }
                                    if (counter % COUNT == 0 && open == false)
                                    {
                                        @Html.Raw("<div class='mycolumn' style='width: 25%'>");
                                        open = true;
                                    }
                                    int id2 = children[j].Id;
                                    var grandchild = db.Categories.Where(p => p.Parent.Id == id2).ToList();
                                    for (int k = 0; k < grandchild.Count; k++)
                                    {
                                        <a style="margin-right:20px" href="/Categories/Index?Category_Id=@grandchild[k].Id">@grandchild[k].Name</a>
                                        counter++;
                                        if (counter % COUNT == 0 && open)
                                        {
                                            @Html.Raw("</div>");
                                            open = false;

                                        }
                                        if (counter % COUNT == 0 && open == false)
                                        {
                                            @Html.Raw("<div class='mycolumn' style='width: 25%'>");
                                            open = true;
                                        }
                                    }


                                }
                            }


                        </div>

                    </div>
                </div>

                                if (open)
                                {
                                    @Html.Raw("</div>");
                                        counter = 0;
                                    }

                                }



        }


