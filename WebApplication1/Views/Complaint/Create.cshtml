
@{
    Layout = "~/Views/Shared/Master.cshtml";
}
<div class="row" style="margin-top:20px">
    <div class="col-md-8  offset-md-2">
        <div style="text-align:right;direction:rtl">
            @RenderPage("~/Views/Errors/ShowErrors.cshtml")
        </div>

        <div style="color:green;font-weight:bold;text-align:right">
            @ViewBag.Message
        </div>
        <form action="/Complaint/Store" method="post">
            <div class="form-group" style="direction:rtl">
                <label for="exampleInputEmail1" style="float:right">عنوان </label>
                <input name="Title" class="form-control">
            </div>
            <div class="form-group" style="direction:rtl">
                <label for="exampleInputEmail1" style="float:right">تلفن تماس یا ایمیل </label>
                <input  name="Call" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1"  style="float:right">متن شکایت</label>
                <textarea name="Text" style="width:100%;height:250px"></textarea>
            </div>
           
            <button type="submit" class="btn btn-primary" style="float:right">ثبت شکایت</button>
        </form>
        
    </div>
</div>